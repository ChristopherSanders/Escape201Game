<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.chris.escape201game.SettingsScreen"
    android:background="@drawable/introbackground">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sound_effects_check"
        android:id="@+id/sfxChbxID"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="46dp"
        android:checked="true"
        android:textColor="#ffffffff"
        android:onClick="onCheckboxClicked"
        android:clickable="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/music_check"
        android:id="@+id/musicChbxID"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/sfxChbxID"
        android:layout_alignLeft="@+id/sfxChbxID"
        android:layout_alignStart="@+id/sfxChbxID"
        android:checked="true"
        android:onClick="onCheckboxClicked"
        android:textColor="#ffffffff"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tips Enabled"
        android:id="@+id/tipsChbxID"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/musicChbxID"
        android:layout_alignLeft="@+id/musicChbxID"
        android:layout_alignStart="@+id/musicChbxID"
        android:checked="false"
        android:onClick="onCheckboxClicked"
        android:textColor="#ffffffff" />
</RelativeLayout>

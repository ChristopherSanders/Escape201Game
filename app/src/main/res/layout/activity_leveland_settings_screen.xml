<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.chris.escape201game.LevelandSettingsScreen">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/level_select_btn"
        android:id="@+id/levelsBtnID"
        android:width="190dp"
        android:height="100dp"
        android:textSize="35sp"
        android:layout_toStartOf="@+id/playBtnID"
        android:layout_marginLeft="48dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_btn"
        android:id="@+id/settingsBtnID"
        android:width="190dp"
        android:height="100dp"
        android:textSize="35sp"
        android:layout_toEndOf="@+id/levelsBtnID"
        android:layout_toRightOf="@+id/levelsBtnID"
        android:layout_marginLeft="113dp"
        android:layout_alignTop="@+id/levelsBtnID" />
</RelativeLayout>

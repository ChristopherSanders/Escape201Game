<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.chris.escape201game.LevelandSettingsScreen"
    android:background="@drawable/introbackground">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/level_select_btn"
        android:id="@+id/levelsBtnID"
        android:width="190dp"
        android:height="100dp"
        android:textSize="35sp"
        android:layout_toStartOf="@+id/playBtnID"
        android:layout_marginLeft="101dp"
        android:onClick="gotoLevelSelectActivity"
        android:layout_marginTop="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_btn"
        android:id="@+id/settingsBtnID"
        android:width="190dp"
        android:height="100dp"
        android:textSize="35sp"
        android:layout_toEndOf="@+id/levelsBtnID"
        android:onClick="gotoSettingsActivity"
        android:layout_below="@+id/levelsBtnID"
        android:layout_alignLeft="@+id/levelsBtnID"
        android:layout_alignStart="@+id/levelsBtnID"
        android:layout_marginTop="23dp" />

</RelativeLayout>

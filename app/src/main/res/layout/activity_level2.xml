<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.chris.escape201game.Level2"
    android:background="@drawable/doorviewclockfixed"
    android:id="@+id/level2_layout"
    android:clickable="true">


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:id="@+id/l2_doorViewBtnId"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:onClick="goToDoor_2"
        android:visibility="visible"
        android:background="#00ffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/l2_dropScreenBtnId"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="100dp"
        android:layout_alignTop="@+id/l2_doorViewBtnId"
        android:layout_alignParentLeft="true"
        android:onClick="changeDropScreen"
        android:visibility="visible"
        android:background="#00ffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="125dp"
        android:layout_height="70dp"
        android:id="@+id/l2_trashCanBtnId"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:onClick="goToTrash_2"
        android:background="#00ffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="200dp"
        android:layout_height="fill_parent"
        android:id="@+id/l2_whiteBoardBtnId"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:onClick="goToWhiteBoard_2"
        android:layout_toRightOf="@+id/backBtnID"
        android:background="#00ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/l2_keypadBtnId"
        android:layout_marginRight="102dp"
        android:layout_marginBottom="89dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:onClick="goToKeypad_2"
        android:background="#00ffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/l2_lightSwitchBtnId"
        android:layout_marginRight="41dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:onClick="goToLightSwitch_2"
        android:background="#00ffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/l2_clockBtnId"
        android:layout_marginRight="121dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:onClick="goToClock_2"
        android:background="#00ffffff" />

    <Button
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:text="Back"
        android:id="@+id/l2_backBtnId"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="visible"
        android:onClick="goToPreviousView"/>

    <Button
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/l2_clockHandBtnId"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="170dp"
        android:onClick="pickUpClockPiece"
        android:visibility="gone"
        android:background="#00ffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:id="@+id/l2_fixClockBtnId"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:onClick="fixClock"
        android:background="#00ffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="41dp"
        android:layout_height="24dp"
        android:id="@+id/l2_submitBtnId"
        android:text="Submit"
        android:textSize="5sp"
        android:textStyle="bold"
        android:layout_marginRight="330dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="65dp"
        android:visibility="gone"
        android:onClick="saveToCode"/>

    <EditText
        android:layout_width="38dp"
        android:layout_height="24dp"
        android:id="@+id/l2_codeTextId"
        android:layout_alignTop="@+id/l2_submitBtnId"
        android:layout_toLeftOf="@+id/l2_submitBtnId"
        android:editable="true"
        android:numeric="integer"
        android:visibility="gone"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:textSize="6sp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:id="@+id/l2_lightSwitchRightBtnId"
        android:layout_marginRight="205dp"
        android:layout_marginBottom="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:onClick="changeRightSwitch"
        android:background="#00ffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:id="@+id/l2_lightSwitchLeftBtnId"
        android:layout_alignBottom="@+id/l2_lightSwitchRightBtnId"
        android:layout_toLeftOf="@+id/l2_lightSwitchRightBtnId"
        android:visibility="gone"
        android:onClick="changeLeftSwitch"
        android:background="#00ffffff" />

    <TextView
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Chair"
        android:id="@+id/paperTextId"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="161dp"
        android:layout_marginTop="115dp"
        android:textSize="11dp"
        android:textStyle="normal|bold"
        android:textColor="#99959900"
        android:visibility="gone" />

</RelativeLayout>
